
<% if user_signed_in? %>
<br>
<div class="container">
<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
      <% if current_user.avatar.attached? %>
        <%= image_tag current_user.avatar %> 
        <% end %>
      </div>
    </div>

    <div class="col-md-8 basic-info">
      <div class="user-wrapper">
        <h2>Welcome <p class="username"><%= current_user.name %><p></h2>
          <a class="edit-profile" href="<%= edit_user_path(current_user) %>">
            <button class="btn btn-purple">Edit Profile</button>
          </a>
          <a class="edit-profile" href="<%= new_listing_path %>">
    <button class="btn btn-pink">New Listing</button>
 </a>
      </div>
      <div class="posts">
      <p>You currently have <span><%= @user.listings.count %></span> active Preloved listings</p>
      </div>     
    </div>
  </div>
  </div>
</div>
<div class="container" style="margin-top:-50px;">
<table class="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Image</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Make</th>
      <th scope="col">Price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @user.listings.each do |listing| %>
    <tr>
        <td><%= image_tag listing.image, width: 100 %></td>
        <td><%= listing.name %></td>
        <td><%= listing.description %></td>
        <td><%= listing.year %></td>
        <td><%= number_to_currency listing.price %></td>
        <td>
            <div class="btn-group" role="group">
              <button id="btnGroupDrop1" type="button" class="btn btn-secondary dropdown-toggle btn-purple" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Select Action
              </button>
              <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                <a class="dropdown-item" href="#">View</a>
                <a class="dropdown-item" href="#">Edit</a>
                <a class="dropdown-item" href="#">Delete</a>
              </div>
            </div>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>

</div>

<% else %>
<div class="container" style="text-align:center">
<br>
<h1>Sorry! Not allowed.</h1>
  <%= image_tag("not_found.png", width: "50%") %>
<h4>If this page belongs to you, please <%= link_to "log into", new_user_session_path %> your account </h4>
<h4>Otherwise, please <%= link_to "sign up", new_user_registration_path %> for an account </h4>
</div>
<% end %>