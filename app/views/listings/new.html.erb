<br>
<div class="container">

<% if user_signed_in? %>
  <%= form_for Post.new do |f| %>
      <div class="form-group">
      <%= f.label :name, class: 'col-sm-3 col-form-label' %>
        <%= f.text_field :name, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :description, class: 'col-sm-3 col-form-label' %>
        <%= f.text_field :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :type, class: 'col-sm-3 col-form-label' %>
        <%= f.text_field :type, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :condition, class: 'col-sm-3 col-form-label' %>
        <%= f.text_field :condition, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :year, class: 'col-sm-3 col-form-label' %>
        <%= f.text_field :year, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :price, class: 'col-sm-3 col-form-label' %>
        <%= f.text_field :price, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.label :image, class: 'col-sm-3 col-form-label' %>
        <%= f.file_field :image, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_field :user_id, value: current_user.id, class:'d-none'%>
      </div>
      <br>
      <div class="actions text-center">
        <%= f.submit 'Create Listing', class: 'btn btn-purple' %>
      </div>
  <% end %>
<% end %>
</div>